import tkinter as tk
from tkinter import ttk

class Application:
    def __init__(self, master=None):
        self.master = master
        self.master.title("Janela Principal")
        self.master.geometry("300x200")

        # Cria um frame dentro do widget master
        self.frame = ttk.Frame(master)
        self.frame.pack(pady=20)

        # Cria um botão para abrir a janela secundária
        self.open_button = ttk.Button(self.frame, text="Abrir Janela Secundária", command=self.abrir_janela_secundaria)
        self.open_button.pack()

    def abrir_janela_secundaria(self):
        self.new_window = tk.Toplevel(self.master)
        self.new_window.title("Janela Secundária")
        self.new_window.geometry("200x100")
        SecondaryWindow(self.new_window)

class SecondaryWindow:
    def __init__(self, master=None):
        self.master = master

        # Cria um frame dentro do widget master
        self.frame = ttk.Frame(master)
        self.frame.pack(pady=20)

        # Cria um rótulo na janela secundária
        self.label = ttk.Label(self.frame, text="Esta é a janela secundária!")
        self.label.pack()

        # Cria um botão para fechar a janela secundária
        self.close_button = ttk.Button(self.frame, text="Fechar", command=self.master.destroy)
        self.close_button.pack()

if __name__ == "__main__":
    root = tk.Tk()
    app = Application(master=root)
    root.mainloop()
